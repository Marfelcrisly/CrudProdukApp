@model CrudProdukApp.Models.Produk

@{
    ViewData["Title"] = "Detail Produk";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-3 mx-auto" style="max-width: 500px;">
        <div class="card-header bg-primary text-white text-center">
            <h1 class="card-title mb-0">Detail Produk</h1>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.Nama)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nama)
                </dd>
                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.Harga)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Harga)
                </dd>
                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.Stok)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Stok)
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm rounded-pill">
                <i class="fas fa-edit me-2"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-sm rounded-pill">
                <i class="fas fa-arrow-left me-2"></i> Kembali ke Daftar
            </a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
