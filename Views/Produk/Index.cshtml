@model IEnumerable<CrudProdukApp.Models.Produk>

@{
    ViewData["Title"] = "Daftar Produk";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h1 class="card-title mb-0">Daftar Produk</h1>
        </div>
        <div class="card-body">
            <p class="text-end mb-3">
                <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill">
                    <i class="fas fa-plus-circle me-2"></i> Tambah Produk Baru
                </a>
            </p>
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nama)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Harga)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Stok)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nama)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Harga)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stok)
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    Belum ada produk. Silakan tambahkan produk baru.
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
